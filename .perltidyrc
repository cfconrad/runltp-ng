-l=80       # 80 characters would be desired but it is not feasible right now
-fbl        # don't change blank lines
-fnl	    # don't remove new lines
-nsfs       # no spaces before semicolons
-baao       # space after operators
-bbao       # space before operators
-pt=2       # no spaces around ()
-bt=2       # no spaces around []
-sbt=2      # no spaces around {}
-sct        # stack closing tokens )}
-t          # leading tabs
-et=8       # enfoce 8 spaces to be tab
-i=8        # Howmany spaces is one intention
--no-valign # hidden flag to avoid vertical alignment
-ci=8       # Continuation Indentation is using tab as well
